.search-bar{
  display: flex;
  border-style:groove;
  border-top:1rpx rgb(175, 175, 175);
  border-left: 1rpx ;
  border-right: 1rpx;
  /* box-shadow: 3rpx 5rpx rgb(153, 153, 153); */
  max-height: 80px;
  min-height: 60px;
  width: 85%;
  margin-left: 5%;
  margin-right: 5%;
  justify-items: center;
  align-items: center;
  flex-direction: row;
  align-content: center ;
  justify-content: space-between;
  padding-right: 5%;
  font-size: large;
}
.input-box{
  margin-left: 5%;
  text-align: center;
  text-justify: distribute;
}
.show_sercher{
  background-color: rgb(255, 255, 255);
  width: 50%;
  margin-left: 25%;
  border-radius: 20rpx;
  padding-left: 3%;
  border-bottom:1px darkgray;
  box-shadow:1px 2px 1px rgb(202, 201, 201);
}
.title{
  font-size: 23px;
  font-weight: 700;
  
}
.container_put_choice{
  padding: 3%;
  border-bottom: 1px solid #000000;
}
.container_put{
  margin: 5%;
  padding: 3%;
  border: 1px solid #000000;
}
.container_choise{
  /* display: inline; */
  font-size: larger;
  justify-content: center;
  justify-items: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.button{
  border-radius: 10rpx;
  margin-left: 10rpx;
  width: 30px;
  border-color:1rpx 1rpx  rgb(157, 219, 219);
}