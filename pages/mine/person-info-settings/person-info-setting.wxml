<view class="container">
  <form bindsubmit="formSubmit">
    <view class="form-item">
      <view class="label">照片</view>
      <view class="avatar">
        <image src="{{avatarUrl}}" mode="aspectFit"></image>
      </view>
    </view>
    <view class="form-item">
      <view class="label">姓名</view>
      <input class="input" type="text" name="nickname" value="{{nickname}}" placeholder="onUsernameInput" ></input>
    </view>
    <view class="form-item">
      <view class="label">性别</view>
      <radio-group class="radio-group" name="gender" value="{{gender}}">
        <label class="radio"><radio value="男"></radio>男</label>
        <label class="radio"><radio value="女"></radio>女</label>
      </radio-group>
    </view>
    <view class="form-item">
      <view class="label">生日</view>
      <picker class="picker" mode="date" value="{{birthday}}" start="1900-01-01" end="{{today}}" bindchange="bindDateChange">
        <view class="picker-text">{{birthday}}</view>
      </picker>
    </view>
    <view class="form-item">
      <view class="label">手机号</view>
      <input class="input" type="tel" name="phone" value="{{phone}}" placeholder="请输入手机号"></input>
    </view>
    <button class="btn-save" form-type="submit">保存</button>
  </form>
</view>
